<%= form_for @product do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :articul %><br />
    <%= f.text_field :articul %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :sale %><br />
    <%= f.text_field :sale %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
